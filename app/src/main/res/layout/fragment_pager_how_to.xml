<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="t_saito.ar.camera.viewmodel.HowToPagerViewModel"/>
        <variable
            name="adapter"
            type="t_saito.ar.camera.ui.adapter.HowToPagerAdapter"/>
    </data>

<android.support.constraint.ConstraintLayout
    android:id="@+id/how_to_pager_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >

    <!-- ページャ -->
    <android.support.v4.view.ViewPager
        android:id="@+id/how_to_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_footer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_above="@+id/layout_footer"
        app:addOnPageChangeListener="@{viewModel}"
        android:adapter="@{adapter}"
    >
    </android.support.v4.view.ViewPager>
        
    <!-- 次へ -->
    <FrameLayout
        android:id="@+id/layout_footer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    >
        <TextView
            android:id="@+id/text_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="@dimen/how_to_small_margin"
            android:paddingLeft="@dimen/how_to_middle_margin"
            android:text="@string/button_next"
            android:textColor="@color/base_text_color"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_777777_24dp"
            android:visibility="@{viewModel.nextVisibility}"
            android:onClick="@{viewModel.onClickNext}"
        />
        <TextView
            android:id="@+id/text_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="@dimen/how_to_small_margin"
            android:paddingRight="@dimen/how_to_middle_margin"
            android:text="@string/button_close"
            android:textColor="@color/base_text_color"
            android:drawableLeft="@drawable/ic_close_777777_24dp"
            android:visibility="@{viewModel.closeVisibility}"
            android:onClick="@{viewModel.onClickClose}"
        />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
</layout>