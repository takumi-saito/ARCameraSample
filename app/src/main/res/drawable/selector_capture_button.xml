<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        >
        <layer-list>
            <item
                android:width="70dp"
                android:height="70dp"
                android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/colorWildBunch" />
                </shape>
            </item>
            <item
                android:width="60dp"
                android:height="60dp"
                android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/colorWildBunchPressed" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/md_white_1000" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item
                android:width="70dp"
                android:height="70dp"
                android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/colorWildBunch" />
                </shape>
            </item>
            <item
                android:width="60dp"
                android:height="60dp"
                android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/colorWildBunch" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/md_white_1000" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
